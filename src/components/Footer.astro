<style>
  .footer-img img {
    width: 80px;
    padding: 10px;
    height: auto;
  }

  .footer-img,
  .footer-copyright {
    display: flex;
    font-size: 30px;
    align-items: center;
    background: rgb(20, 13, 6);
    border-bottom: 2px solid white;
    color: rgb(240, 230, 210);
    justify-content: center;
  }

  .footer {
    display: flex;
    background-color: rgb(20, 13, 6);
    color: rgb(240, 230, 210);
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 10px;
  }

  .footer-contact li,
  .footer-about li,
  .footer-sm li,
  .footer-cafe li {
    list-style: none;
  }

  .footer-about a,
  .footer-sm a,
  .footer-cafe a {
    color: rgb(240, 230, 210);
    text-decoration: none;
  }

  .footer-about ul b,
  .footer-sm ul b,
  .footer-cafe ul b,
  .footer-contact ul b {
    color: white;
  }

  .footer-about a:hover,
  .footer-sm a:hover,
  .footer-cafe a:hover {
    color: rgb(215, 200, 160);
  }

  .footer-copyright {
    border-bottom: none;
    font-size: 20px;
    padding: 10px;
  }

  @media (max-width: 1034px) {
    .footer-contact li,
    .footer-about li,
    .footer-sm li,
    .footer-cafe li {
      font-size: 15px;
    }

    .footer {
      flex-direction: column;
    }
  }

  @media (max-width: 768px) {
    .footer-img,
    .footer-copyright {
      font-size: 15px;
    }
  }
</style>
