<style>
  .topnav {
    background-color: rgb(20, 13, 6);
    width: 100%;
    height: 70px;
    position: fixed;
    z-index: 11;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .topnav ul {
    display: flex;
    margin: 0;
    padding: 0;
  }

  .topnav li {
    list-style: none;
    padding-left: 20px;
  }

  .topnav ul li a {
    color: #b1977f;
    text-decoration: none;
    font-size: 19px;
    text-align: center;
    transition: all 0.3s ease;
    padding: 23px 30px;
  }

  .furinalogo {
    width: 70px;
    padding: 5px;
    height: auto;
  }

  .logotext {
    color: #b1977f;
    display: flex;
    align-items: center;
  }

  .topnav a:hover {
    background-color: rgb(40, 28, 15);
    color: rgb(240, 230, 210);
  }

  /* Responsiveness */

  .menu-icon {
    display: none;
    font-size: 30px;
    cursor: pointer;
    padding: 10px;
  }

  .menu {
    display: flex;
  }

  #menu-close {
    color: red;
  }

  /* Responsive design */
@media (max-width: 1024px) {



    .menu {
        opacity: 0;
        visibility: hidden;
        position: absolute;
        top: 70px;
        background-color: rgb(20, 13, 6);
        width: 100%;
        transition: 0.2s;

    }

    .menu-icon {
        display: block;
        cursor: pointer;

    }

    .menu.visible {
        opacity: 1;
        visibility: visible;
    }


    .menu-icon {
        display: block;
    }



    .topnav ul {
        flex-direction: column;
        align-items: start;
    }

    .topnav ul li {
        padding: 25px 0;
    }

    
.topnav a:hover {
    background-color: rgb(20, 13, 6);
}

</style>
