---
import MainLayout from "../layouts/MainLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Form from "../components/booking/form.astro";
---

<MainLayout title="Book in Furina de Fontaine">
  <Navigation />
  <section class="booking-container">
    <div class="dark-overlay"></div>
    <h1>Book your table</h1>
    <p>Reserve your seat at our coffee shop</p>
    <Form />
  </section>

  <Footer />
</MainLayout>

<style>
  .booking-container {
    padding: 100px 10px;
    text-align: center;
    min-height: 90vh;
    background-image: url("../assets/book-img6.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover; /* Cambiado de 100% a cover para que no queden huecos */
    position: relative; /* OBLIGATORIO para que el overlay se quede adentro */
    overflow: hidden; /* Evita que el overlay se escape por los bordes */
  }

  .dark-overlay {
    position: absolute; /* Se posiciona respecto al container */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6); /* Formato correcto para opacidad */
    z-index: 1; /* Por debajo del texto */
  }

  /* Para que el contenido se vea por ENCIMA de la oscuridad */
  h1,
  p,
  :global(.form-container) {
    position: relative;
    z-index: 2; /* Mayor que el del overlay */
    color: white;
  }

  h1 {
    font-size: 50px;
    margin-bottom: 10px;
  }

  .booking-container p {
    font-size: 20px;
    margin-bottom: 30px;
  }
</style>
